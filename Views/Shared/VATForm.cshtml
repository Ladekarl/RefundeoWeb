@model Refundeo.Core.Models.RefundCase.VatFormModel

<style>
    body {
        font-size: 15pt
    }
    table, th, td {
        border: 1px solid black;
    }
</style>

<p style="text-align: center;">
    <strong>Tax Free Form @Html.DisplayFor(model => model.ReceiptNumber)</strong>
</p>
<p style="text-align: center;">REFUND OF VALUE ADDED TAX (VAT)</p>
<table style="border-color: #000000; width: 100%;">
    <tbody style="width: 100%;">
    <tr style="height: 18px;">
        <th style="background-color: #d3d3d3; width: 50%;" colspan="2">
            <strong>RETAILER</strong>
        </th>
        <th style="background-color: #d3d3d3; width: 50%; height: 18px;" colspan="2">
            <strong>CUSTOMER</strong>
        </th>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 20%; height: 18px;">Name</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.MerchantName)</td>
        <td style="width: 20%; height: 18px;">Name</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.CustomerName)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 20%; height: 18px;">Address</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.MerchantAddres)</td>
        <td style="width: 20%; height: 18px;">Address</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.CustomerAddres)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 20%; height: 18px;">Postal code</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.MerchantPostalCode)</td>
        <td style="width: 20%; height: 18px;">Postal code</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.CustomerPostalCode)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 20%; height: 18px;">City</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.MerchantCity)</td>
        <td style="width: 20%; height: 18px;">City</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.CustomerCity)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 20%; height: 18px;">Country</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.MerchantCountry)</td>
        <td style="width: 20%; height: 18px;">Country</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.CustomerCountry)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 20%; height: 18px;">VAT no.</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.MerchantVatNo)</td>
        <td style="width: 20%; height: 18px;">Phone no.</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.CustomerPhone)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 20%; height: 18px;">Contact phone</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.MerchantPhone)</td>
        <td style="width: 20%; height: 18px;">Email</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.CustomerEmail)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 20%; height: 18px;">Contact email</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.MerchantEmail)</td>
        <td style="width: 20%; height: 18px;">Passport no.</td>
        <td style="width: 30%; height: 18px;">@Html.DisplayFor(model => model.CustomerPassport)</td>
    </tr>
    <tr style="height: 18px;">
        <th style="width: 100%; background-color: #d3d3d3; height: 18px;" colspan="4">GOODS ACCORDING TO ATTACHED INVOICE / RECEIPT</th>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 50%; height: 18px;" colspan="2">Invoice / Receipt no.</td>
        <td style="width: 50%; height: 18px;" colspan="2">@Html.DisplayFor(model => model.ReceiptNumber)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 50%; height: 18px;" colspan="2">Date of issue (purchase date)</td>
        <td style="width: 50%; height: 18px;" colspan="2">@Html.DisplayFor(model => model.Date)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 50%; height: 18px;" colspan="2">Sales price of the goods in total incl. VAT</td>
        <td style="width: 50%; height: 18px;" colspan="2">@Html.DisplayFor(model => model.Amount)</td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 50%; height: 18px;" colspan="2">Amount of VAT</td>
        <td style="width: 50%; height: 18px;" colspan="2">@Html.DisplayFor(model => model.VatAmount)</td>
    </tr>
    <tr style="height: 36px;">
        <td style="width: 50%; height: 36px;" colspan="2">Refund amount (reduced by administrative fee)</td>
        <td style="width: 50%; height: 36px;" colspan="2">@Html.DisplayFor(model => model.RefundAmount)</td>
    </tr>
    <tr style="height: 18px;">
        <th style="width: 100%; background-color: #d3d3d3; height: 18px;" colspan="4">RETAILER DECLARATION</th>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 100%; height: 18px;" colspan="4">&nbsp;</td>
    </tr>
    <tr style="height: 100px;">
        <td style="width: 50%; height: 100px; vertical-align: top;" colspan="2">Reatailer signature
            <img src="data:image/png;base64,@Html.DisplayFor(model => model.MerchantSignature)"/></td>
        <td style="width: 50%; height: 100px; vertical-align: top;" colspan="2">Customer signature
            <img src="data:image/png;base64,@Html.DisplayFor(model => model.CustomerSignature)"/></td>
    </tr>
    <tr style="height: 18px;">
        <td style="width: 10%; height: 172px; text-align: center" rowspan="4"><img style="height: 200px; width: 200px" src="data:image/png;base64,@Html.DisplayFor(model => model.QrCode)"/></td>
        <th style="width: 70%; background-color: #d3d3d3; height: 18px;" colspan="3">EXPORT VERIFICAITON - for official use only</th>
    </tr>
    <tr>
        <td style="width: 40%; height: 150px; vertical-align: top;" colspan="2" rowspan="3">&nbsp;STAMP HERE&nbsp;</td>
        <td style="width: 30%; vertical-align: top; height: 50px;">&nbsp;The goods listed on attached invoice / receipt are presented for export</td>
    </tr>
    <tr style="height: 33px;">
        <td style="width: 30%; vertical-align: top; height: 50px;">&nbsp;Place and date (optional)</td>
    </tr>
    <tr style="height: 63px;">
        <td style="width: 30%; vertical-align: top; height: 50px;">Signature of customs office (optional)</td>
    </tr>
    </tbody>
</table>
